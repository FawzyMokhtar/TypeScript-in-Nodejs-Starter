{
  "name": "typescript-in-nodejs",
  "version": "1.0.0",
  "author": "Fawzy Mokhtar",
  "main": "src/app/app.ts",
  "license": "MIT",
  "scripts": {
    "start": "node build/app/app.js",
    "dev": "nodemon src/app/app.ts",
    "build": "yarn run clear-build && yarn run build-src",
    "build:start": "yarn run build && yarn run start",
    "clear-build": "rm build -r || true",
    "build-src": "tsc -p ."
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-validator": "^6.4.0",
    "helmet": "^3.21.3",
    "lodash": "^4.17.21",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/helmet": "^0.0.45",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.1",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json,css,md}": [
      "eslint --fix",
      "prettier --single-quote --write"
    ]
  }
}
